<body>
  <div class="flex">
    <div class="flex flex-col justify-between w-[296px] h-screen bg-secondary-light">
      <div class="from-group">
        <a class="pl-8 my-4 block" href="#"><img
            src="https://raw.githubusercontent.com/hexschool/webLayoutTraining1st/2b326fe971cd296bd54667a9b4a63c4b0f19fab3/week5/logo-ANSWER.svg"
            alt="logo picture"></a>
        <ul class="flex flex-col gap-y-[30px] text-bold">
          <li class="border-l-4 border-transparent hover:border-primary"><a class="pl-8 flex items-center group"
              href="dashbord.html"><span
                class="text-third group-hover:text-primary material-icons pr-4">insert_chart_outlined</span>Dashboard</a>
          </li>
          <li class="border-l-4 border-transparent hover:border-primary"><a class="pl-8 flex items-center group"
              href="#"><span
                class="text-third group-hover:text-primary material-icons pr-4">question_answer</span>Question</a></li>
          <li class="border-l-4 border-transparent hover:border-primary"><a class="pl-8 flex items-center group"
              href="assignment.html"><span
                class="text-third group-hover:text-primary material-icons pr-4">assignment</span>Assignment</a></li>
          <li class="border-l-4 border-transparent hover:border-primary"><a class="pl-8 flex items-center group"
              href="#"><span
                class="text-third group-hover:text-primary material-icons pr-4">video_library</span>Course</a></li>
          <li class="border-l-4 border-transparent hover:border-primary"><a class="pl-8 flex items-center group"
              href="#"><span class="text-third group-hover:text-primary material-icons pr-4">people</span>Admin</a></li>
          <li class="border-l-4 border-transparent hover:border-primary"><a class="pl-8 flex items-center group"
              href="#"><span class="text-third group-hover:text-primary material-icons pr-4">settings</span>Settings</a>
          </li>
        </ul>
      </div>
      <div class="flex ml-8">
        <img class="mr-4 rounded-full h-10 w-10" src="./assets/images/andy.jfif" alt="personal picture">
        <div class="from-group">
          <p class="text-bold">Andy Chen</p>
          <p class="text-secondary text-sm">andy0401@mail.com</p>
        </div>
      </div>
    </div>
    <div class="w-full px-8 py-4">
      <div class="flex justify-between">
        <div class="flex items-center">
        <% if(current === 'assignment') { %>
            <h2 class="text-2xl pr-12">Assignment</h2>
            <a class="flex items-center gap-x2" href="#">All Courses<span class="material-symbols-outlined text-primary">
              expand_more
              </span></a>
          <% } else { %>  
            <h2 class="text-2xl pr-12">Admin</h2>
            <a class="flex items-center gap-x2" href="#" data-modal-toggle="newModal"><span class="material-symbols-outlined text-primary" >
            add
            </span>Add New Admin</a>
        <%} %>
        </div>
        <div class="flex items-center gap-x-2">
          <a class="flex items-center" href="#"><span class="material-symbols-outlined">
            search
            </span></a>
          <a class="flex items-center" href="#"><span class="material-symbols-outlined">
            notifications_active
            </span></a>
        </div>
      </div>
      <%- contents %>
    </div>
  </div>

 
</body>

<script src="./assets/js/vendors.js"></script>
<script src="./assets/js/flowbite.js"></script>
<script src="./assets/js/all.js"></script>

